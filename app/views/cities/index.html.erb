<%= render 'cities/header' %>

<hr>

<div class="row">
    <div class="col-md-4">
        <div class="panel panel-default">
          <div class="panel-body text-center">
            <%= link_to '#' do %>
                <i class="fa fa-map"></i> GET ON THE MAP
            <% end %>
          </div>
        </div>        
    </div>
    <div class="col-md-4">
        <div class="panel panel-default">
          <div class="panel-body text-center">
            <%= link_to '#' do %>
                <i class="fa fa-cloud-download"></i> ADVERTISER MEDIA KITS
            <% end %>
          </div>
        </div>        
    </div>
    <div class="col-md-4">
        <div class="panel panel-default">
          <div class="panel-body text-center">
            <%= link_to '#' do %>
                <i class="fa fa-archive"></i> ORDER FREE MAPS
            <% end %>
          </div>
        </div>        
    </div>
</div>

<hr>
<% if current_admin %>
<div class="row">
  <div class="col-md-12">
      <%= link_to 'Add New City', new_city_path, class: "btn btn-success" %>
  </div>
</div>
<hr>
<% end %>

<div class="row">
<% @cities.all.each do |city| %>

  <div class="col-md-3">
    <div class="thumbnail">
      <img src="http://lorempixel.com/600/600/city", class="img-responsive" />
      <div class="caption">
        <h3><%= city.name %></h3>
        <div class="row">
          <div class="col-sm-6">
            <%= link_to 'City Map', listings_path(city: city.name), class: "btn btn-danger" %>
          </div>  
          <div class="col-sm-6">
            <%= link_to 'Distribution', distributions_path(city: city.name), class: "btn btn-warning" %>
          </div>  
        </div>
      </div>
    </div>
  </div>



<% end %>
</div>





<!-- THIS IS WHAT IT'S SUPPOSED TO BE! MOVE THE ABOVE CODE TO THE PAGES/INDEX -->
<h1>Listing Cities</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cities.each do |city| %>
      <tr>
        <td><%= city.name %></td>
        <td><%= link_to 'Edit', edit_city_path(city) %></td>
        <td><%= link_to 'Delete', city, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

