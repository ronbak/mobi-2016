<div class="row">
  <div class="col-md-12">
    <h2>Cities</h2>
    <table class="table">
    <tbody>
      <% @countries.each do |country| %>
        <tr>
          <td><%= country.name %></td>
          <% if admin_signed_in? %>
            <td><%= link_to 'Edit', edit_country_path(country) %></td>
            <td><%= link_to 'Delete', country, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>    
  </div>
</div>